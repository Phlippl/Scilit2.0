# Backend/.env

# Server Configuration
PORT=5000
HOST=0.0.0.0
DEBUG=True

# Database Configuration (SQLite)
DATABASE_URL=sqlite:///scilit.db

# Vector DB
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_FUNCTION=openai  # Options: openai, huggingface, default

# API Keys
OPENAI_API_KEY=your-openai-api-key  # Get from OpenAI
HUGGINGFACE_API_KEY=your-huggingface-key  # Optional

# PDF Processing
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=20971520  # 20MB in bytes

# CrossRef API
CROSSREF_EMAIL=your.email@example.com

# LLM Configuration
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-3.5-turbo