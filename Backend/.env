# Backend/.env

# Server Configuration
PORT=5000
HOST=0.0.0.0
DEBUG=True

# Database Configuration (For future implementation)
# DATABASE_URL=sqlite:///scilit.db

# Vector DB Configuration
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_FUNCTION=ollama  # Options: openai, huggingface, ollama, default

# Ollama Configuration (Local embedding service)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3  # Use available model name from your Ollama installation

# Performance Settings
VECTOR_CACHE_TTL=3600  # Time to live for vector cache in seconds
CHUNK_BATCH_SIZE=50  # Number of chunks to process in a single batch
MAX_WORKERS=4  # Maximum number of parallel worker threads

# API Keys (Fill these for production use)
OPENAI_API_KEY=  # Get from OpenAI if using their embedding model
HUGGINGFACE_API_KEY=  # Optional, for using Hugging Face embedding models

# PDF Processing
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=20971520  # 20MB in bytes

# CrossRef API Configuration for metadata retrieval
CROSSREF_EMAIL=your.email@example.com  # Use your email for better API limits

# LLM Configuration
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-3.5-turbo
LLM_TIMEOUT=60  # Timeout in seconds

# Caching Configuration
ENABLE_QUERY_CACHE=true
QUERY_CACHE_SIZE=100
QUERY_CACHE_TTL=3600  # Time to live for query cache in seconds

# CORS Settings
CORS_ALLOW_ORIGINS=*

# Document Processing Settings
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
DEFAULT_PERFORM_OCR=false
DEFAULT_MAX_PAGES=0  # 0 means process all pages

# Logging
LOG_LEVEL=INFO
LOG_FILE=scilit.log

# MySQL-Datenbankkonfiguration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=dein_passwort
MYSQL_DATABASE=scilit2
MYSQL_PORT=3306

# JWT-Secret
SECRET_KEY=dein_geheimer_schlüssel_für_jwt_tokens